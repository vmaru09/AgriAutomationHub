<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary_green">

             <ImageView
                android:id="@+id/back_btn_crop_recommender"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="12dp"
                android:src="@drawable/back_btn"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@color/white"
                android:contentDescription="Back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/crop_recommendation"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:fontFamily="sans-serif-black" />
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation_crop">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/enter_data_to_get_recommendation"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                android:textColor="@color/primary_green_dark" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Nitrogen -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:hint="@string/nitrogen_n"
                        app:boxStrokeColor="@color/primary_green"
                        app:hintTextColor="@color/primary_green"
                        app:startIconDrawable="@drawable/ic_grass"
                        app:startIconTint="@color/primary_green">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/N_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:textColor="#263238" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Phosphorus -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:hint="@string/phosphorus_p"
                        app:boxStrokeColor="@color/primary_green"
                        app:hintTextColor="@color/primary_green"
                        app:startIconDrawable="@drawable/ic_grass"
                        app:startIconTint="@color/primary_green">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/P_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:textColor="#263238" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Potassium -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:hint="@string/potassium_k"
                        app:boxStrokeColor="@color/primary_green"
                        app:hintTextColor="@color/primary_green"
                        app:startIconDrawable="@drawable/ic_grass"
                        app:startIconTint="@color/primary_green">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/K_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:textColor="#263238" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- pH -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:hint="@string/ph"
                        app:boxStrokeColor="@color/primary_green"
                        app:hintTextColor="@color/primary_green"
                        app:startIconDrawable="@drawable/ic_science"
                        app:startIconTint="@color/primary_green">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/ph_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:textColor="#263238" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Rainfall -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        android:hint="@string/rainfall"
                        app:boxStrokeColor="@color/primary_green"
                        app:hintTextColor="@color/primary_green"
                        app:startIconDrawable="@drawable/ic_water_drop"
                        app:startIconTint="@color/primary_green">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/rainfall_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:textColor="#263238" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/recommender_btn"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:text="@string/get_recommendation"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-black"
                        app:cornerRadius="20dp"
                        app:backgroundTint="@color/primary_green"
                        app:elevation="4dp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Results Section -->
            <TextView
                android:id="@+id/output_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/recommendation_will_be_displayed_here"
                android:textAlignment="center"
                 android:textSize="22sp"
                 android:fontFamily="sans-serif-black"
                 android:textColor="@color/primary_green"
                 android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/get_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/get_details_about_crop"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="?android:attr/selectableItemBackground"
                android:padding="12dp"
                android:textColor="@color/primary_green"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

            <!-- Hidden Temp/Humidity needed for logic but not UI -->
            <TextView
                android:id="@+id/temp_display_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />
            <TextView
                android:id="@+id/humidity_display_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation_crop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F0FFFFFF"
        app:elevation="16dp"
        app:itemIconTint="@color/primary_green"
        app:itemTextColor="@color/primary_green"
        app:menu="@menu/bottom_nav_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
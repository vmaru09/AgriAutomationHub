<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary_green">

            <ImageView
                android:id="@+id/back_btn_market_view"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="12dp"
                android:src="@drawable/back_btn"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/marketview"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:fontFamily="sans-serif-black" />
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation_market_view">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Filter Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/select_market_options"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_green"
                        android:layout_marginBottom="16dp"/>

                    <!-- District Spinner with Label -->
                    <TextView
                        android:id="@+id/districtTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/district"
                        android:textColor="@color/secondaryTextColor"
                        android:layout_marginBottom="4dp"/>
                    
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_edittext_background"
                        android:layout_marginBottom="16dp">
                        <Spinner
                            android:id="@+id/districtSpinner"
                            android:layout_width="match_parent"
                            android:layout_height="48dp" />
                    </FrameLayout>


                    <!-- Mandi Spinner with Label -->
                    <TextView
                        android:id="@+id/mandiTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mandi"
                        android:textColor="@color/secondaryTextColor"
                        android:layout_marginBottom="4dp"/>

                     <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_edittext_background"
                        android:layout_marginBottom="16dp">
                        <Spinner
                            android:id="@+id/mandiSpinner"
                            android:layout_width="match_parent"
                            android:layout_height="48dp" />
                    </FrameLayout>

                    <!-- Category Spinner with Label -->
                    <TextView
                        android:id="@+id/commGroupTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/category"
                        android:textColor="@color/secondaryTextColor"
                        android:layout_marginBottom="4dp"/>

                     <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_edittext_background"
                        android:layout_marginBottom="16dp">
                        <Spinner
                            android:id="@+id/commGroupSpinner"
                            android:layout_width="match_parent"
                            android:layout_height="48dp" />
                    </FrameLayout>

                    <!-- Crop Spinner with Label -->
                    <TextView
                        android:id="@+id/cropTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/crop"
                        android:textColor="@color/secondaryTextColor"
                        android:layout_marginBottom="4dp"/>

                     <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_edittext_background"
                        android:layout_marginBottom="24dp">
                        <Spinner
                            android:id="@+id/cropSpinner"
                            android:layout_width="match_parent"
                            android:layout_height="48dp" />
                    </FrameLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/fetchDataButton"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="@string/fetch_data"
                        android:textSize="16sp"
                        app:cornerRadius="20dp"
                        app:backgroundTint="@color/primary_green"
                        app:elevation="4dp"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />

            <!-- Percentage Change Section -->
            <LinearLayout
                android:id="@+id/percentageChangeSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal"
                android:gravity="center"
                 android:padding="12dp"
                android:background="@drawable/bg_dashboard_card"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/percentageChangeIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_up"
                     android:layout_marginEnd="8dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/percentageChangeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <!-- Line Chart Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/priceChart"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:padding="8dp"
                    android:visibility="gone" />
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation_market_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F0FFFFFF"
        app:elevation="16dp"
        app:itemIconTint="@color/primary_green"
        app:itemTextColor="@color/primary_green"
        app:menu="@menu/bottom_nav_menu"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

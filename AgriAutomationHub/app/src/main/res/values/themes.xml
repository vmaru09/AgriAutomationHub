<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AgriAutomationHub" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme -->
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorPrimaryVariant">@color/primary_green_dark</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/primary_green_light</item>
        <item name="colorOnSecondary">@android:color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="navigationViewStyle">@style/Widget.Agri.NavigationView</item>
        
        <!-- Semantic mappings -->
        <item name="android:colorBackground">@color/app_background</item>
        <item name="colorSurface">@color/card_background</item>
    </style>

    <style name="Theme.AgriAutomationHub.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AgriAutomationHub.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AgriAutomationHub.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Night mode Switch -->
    <style name="nightModeSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/night_mode</item>
        <item name="colorSwitchThumbNormal">#FFFFFF</item>
        <item name="android:colorForeground">#99FFFFFF</item>
    </style>

    <!--- Notifications Switch -->
    <style name="notificationsSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/notifications</item>
        <item name="colorSwitchThumbNormal">#FFFFFF</item>
        <item name="android:colorForeground">#99FFFFFF</item>
    </style>

    <!--- Private Account Switch -->
    <style name="privateAccountSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/private_account</item>
        <item name="colorSwitchThumbNormal">#FFFFFF</item>
        <item name="android:colorForeground">#99FFFFFF</item>
    </style>
    <!-- Base application theme. -->
    <style name="Base.Theme.Material3.Light" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Material3.Light" parent="Base.Theme.Material3.Light" />
    <style name="Theme.Material3.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Material3.Light.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Material3.Light.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Widget.Agri.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemShapeAppearanceOverlay">@style/ShapeAppearance.Agri.SmallComponent</item>
        <item name="itemShapeFillColor">#1A2E7D32</item>
        <item name="itemHorizontalPadding">12dp</item>
    </style>

    <style name="ShapeAppearance.Agri.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="CircleImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>